{
  "name": "@fixxx/pakjekraam",
  "version": "0.0.0",
  "description": "",
  "repository": "https://github.com/Amsterdam/fixxx-pakjekraam.git",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "gulp build",
    "clean": "rm -rf dist/*",
    "start": "node src/index.js",
    "predev": "npm run build",
    "dev": "node-dev src/index.js",
    "test": "jest",
    "deploy": "concurrently 'npm:deploy:*'",
    "deploy:connect-pg": "echo 'TODO: Run node_modules/connect-pg-simple/table.sql' && exit 1",
    "lint": "concurrently 'npm:lint:*'",
    "lint:editorconfig": "git ls-files '*.cfg' '*.cnf' '*.conf' '*.crt' '*.css' '*.csv' '*.dockerignore' '*.editorconfig' '*.env' '*.eslintignore' '*.eslintrc' '*.feature' '*.gitattributes' '*.gitignore' '*.groovy' '*.htm' '*.html' '*.ini' '*.json' '*.key' '*.less' '*.markdown' '*.md' '*.params' '*.pem' '*.php' '*.pub' '*.py' '*.rb' '*.rdf' '*.rq' '*.rsa' '*.scss' '*.service' '*.sh' '*.spec' '*.sql' '*.srl' '*.stylelintrc' '*.svg' '*.ts' '*.twig' '*.txt' '*.vcl' '*.wsdl' '*.xhtml' '*.xliff' '*.xml' '*.xqy' '*.xsd' '*.xsl' '*.xslt' '*.yml' '*AUTHORS' '*CONTRIBUTORS' '*Dockerfile' '*LICENSE' '*Makefile' '*README' '*Jenkinsfile' | xargs lintspaces --matchdotfiles --newline --editorconfig .editorconfig --ignores js-comments",
    "lint:eslint": "eslint './src/**/*.js' './src/**/*.jsx'",
    "lint-fix": "npm run lint-fix:eslint; npm run lint-fix:prettier",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "lint-fix:prettier": "prettier --write '**/*.js' '**/*.css' '**/*.scss' '**/*.json' '**/*.jsx' '*.yml'",
    "lint-non-npm": "git ls-files '*.yml' | tr '\n' '\\0' | xargs -0 yamllint",
    "prewatch": "npm run clean && npm run build",
    "watch": "gulp watch"
  },
  "author": "",
  "license": "MPL-2.0",
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "concurrently": "4.1.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-react": "7.13.0",
    "gulp": "4.0.2",
    "gulp-clean-css": "4.2.0",
    "gulp-sass": "4.0.2",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.7",
    "lintspaces-cli": "0.7.1",
    "node-dev": "4.0.0",
    "node-sass": "4.12.0",
    "npm-check": "5.9.0",
    "prettier": "1.17.1"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "axios": "0.19.0",
    "axios-cache-adapter": "2.3.2",
    "body-parser": "1.19.0",
    "connect-ensure-login": "0.1.1",
    "connect-pg-simple": "5.0.0",
    "cookie-parser": "1.4.4",
    "express": "4.17.1",
    "express-react-views": "0.11.0",
    "express-session": "1.16.1",
    "morgan": "1.9.1",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "pg": "7.11.0",
    "pg-hstore": "2.3.3",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-native": "0.59.8",
    "sequelize": "5.8.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{css,js,json,jsx,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
